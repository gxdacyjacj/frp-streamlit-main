# FRP钢筋耐久性预测系统 - 环境变量配置

# ===========================================
# 部署模式配置
# ===========================================
# 模式：local（本地学习）或 production（云端部署）
DEPLOYMENT_MODE=local

# ===========================================
# 数据库配置 - 本地学习环境
# ===========================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=666666
DB_NAME=haigui_database

# ===========================================
# 数据库配置 - 生产环境（Railway）
# ===========================================
# 真正部署时需要修改这些值
RAILWAY_DB_HOST=containers-us-west-xxx.railway.app
RAILWAY_DB_PORT=3306
RAILWAY_DB_USER=root
RAILWAY_DB_PASSWORD=your-railway-password
RAILWAY_DB_NAME=railway

# ===========================================
# 应用配置
# ===========================================
APP_DEBUG=true
APP_PORT=8501
PLATFORM_PORT=8502
ANALYSIS_PORT=8503

# ===========================================
# 文件路径配置
# ===========================================
# Excel数据文件路径 (使用绝对路径)
EXCEL_FILE_PATH=E:/大学/intern/2025-summer-concret/database 4.xlsx
EXCEL_FILE_PATH_1=E:/大学/intern/2025-summer-concret/database 1.xlsx

# 模型文件路径
MODEL_SAVE_PATH=./models/
EXPERIMENT_RESULTS_PATH=./experiments/

# ===========================================
# 邮件配置 (可选)
# ===========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# ===========================================
# 安全配置
# ===========================================
SECRET_KEY=your_secret_key_here
SESSION_TIMEOUT=3600

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/app.log

# ===========================================
# 模型配置
# ===========================================
# 默认使用的模型类型
DEFAULT_MODEL_TYPE=CatBoost
# 交叉验证折数
CV_FOLDS=5
# 随机种子
RANDOM_SEED=42

# ===========================================
# Streamlit配置
# ===========================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
STREAMLIT_BROWSER_GATHER_USAGE_STATS=false